{
  "name": "mithras-contracts-and-circuits",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "test": "vitest run --testTimeout=60000 --no-file-parallelism",
    "build:contracts": "algokit compile ts contracts",
    "build:clients": "algokit generate client contracts/out --output contracts/clients/{contract_name}.ts",
    "build": "pnpm build:zkey && pnpm build:contracts && pnpm build:clients && pnpm build:test",
    "build:test-contracts": "algokit compile ts __test__/contracts",
    "build:test-clients": "algokit generate client __test__/contracts/out --output __test__/contracts/clients/{contract_name}.ts",
    "build:test": "pnpm build:test-contracts && pnpm build:test-clients",
    "build:zkey": "cd circuits && bash zkey.sh"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "packageManager": "pnpm@10.9.0",
  "devDependencies": {
    "@algorandfoundation/algokit-utils": "^9.1.2",
    "@algorandfoundation/algorand-typescript": "1.0.0-alpha.77",
    "@algorandfoundation/puya-ts": "1.0.0-alpha.77",
    "@types/node": "^24.3.0",
    "algosdk": "^3.4.0",
    "circom_tester": "^0.0.24",
    "prettier": "^3.6.2",
    "snarkjs": "^0.7.5",
    "vitest": "^3.2.4"
  },
  "dependencies": {
    "snarkjs-algorand": "^0.11.0"
  }
}
